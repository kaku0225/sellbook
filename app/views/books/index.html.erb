<%= flash[:notice] %>

<h1>書籍列表</h1>

<%= link_to '新增書籍' , new_book_path %>


<table>
  <tr>
    <td>Name</td>
    <td>Author</td>
    <td>Pirce</td>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.name , book_path(book.id) %></td>
      <td><%= book.author %></td>
      <td><%= book.pirce %></td>
      <td><%= link_to '編輯' , edit_book_path(book.id) %></td>
      <td><%= link_to '刪除' , book_path(book.id), method: 'delete'%></td>
    </tr>
   <% end %>
</table>
